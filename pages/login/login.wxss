/* pages/login/login.wxss */
.login-container{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.login-container .logo{
  margin-top: 180rpx;
  width: 212rpx;
  height: 212rpx;
}
.login-container .title{
  color: #333;
  font-size: 24px;
  margin-top: 20rpx;
}
.login-container .login-tips{
  margin-top: 30rpx;
  height: 34rpx;
  width: 292rpx;
}
.login-container .wx-login-button{
  margin-top: 200rpx;
  height: 98rpx;
  width: 568rpx;
  padding: 0;
  border: none;
}
.login-container .wx-login-button .wx-login-img{
  width:100%;
  height: 100%;
}
.login-container .phone-login{
  margin-top: 40rpx;
  color: #333;
  font-size: 16px;
}
.login-container .bottom-tip {
  color: #a8a8a8;
  font-size: 10px;
  position: absolute;
  bottom: 40rpx;
}